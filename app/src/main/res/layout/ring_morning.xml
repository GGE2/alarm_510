<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/const_morning"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/morning">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_am_pm_morning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="150dp"
            android:fontFamily="sans-serif"
            android:text="오전"
            android:textColor="#ffffff"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_hour_morning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_am_pm_morning"
            android:layout_marginStart="100dp"
            android:layout_marginRight="20dp"
            android:fontFamily="sans-serif"
            android:text="06:"
            android:textColor="#ffffff"
            android:textSize="50dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_minute_morning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_am_pm_morning"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tv_hour_morning"
            android:fontFamily="sans-serif"
            android:text="30"
            android:textColor="#FFFFFF"
            android:textSize="50dp"
            android:textStyle="bold" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
