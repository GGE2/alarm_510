<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/const_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor">

    <RelativeLayout
        android:id="@+id/const_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintVertical_weight="3"
        android:background="@color/mainColor">

        <TextView
            android:id="@+id/text_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:padding="20dp"
            android:text="나만의 맞춤 알람을 \n 추가해 보세요 :)"
            android:textColor="#E5E5E5"
            android:textSize="12pt"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf = "parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_page"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <RelativeLayout
            android:id="@+id/question_type"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="false"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/text_qt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="sans-serif"
                android:layout_margin="5dp"
                android:text="카테고리 설정"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_qt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_qt"
                android:textColor="@color/mainColor"
                android:layout_margin="5dp"
                android:text="영단어"
                android:textStyle="bold"
                android:textSize="15dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#DFE4E6"
                android:layout_alignParentBottom="true"/>



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/alarm_clock"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/question_type"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/question_type"
            app:layout_constraintTop_toBottomOf="@+id/question_type">

            <TextView
                android:id="@+id/text_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="sans-serif"
                android:layout_margin="5dp"
                android:text="알람 시간"
                android:textSize="16dp"
                android:textStyle="bold" />
            <TimePicker
                android:id="@+id/tp"
                android:layout_width="300dp"
                android:layout_height="120dp"
                android:layout_below="@+id/text_clock"
                android:theme="@style/Theme.picker"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:timePickerMode="spinner" />



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/alarm_repeat"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/alarm_clock"
            app:layout_constraintStart_toStartOf="@+id/alarm_clock"
            app:layout_constraintTop_toBottomOf="@+id/alarm_clock">

            <TextView
                android:id="@+id/text_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="sans-serif"
                android:text="알람 반복"
                android:textSize="16dp"
                android:layout_margin="5dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text_repeat"
                android:layout_above="@+id/tg_Monday"
                android:textColor="@color/mainColor"
                android:layout_margin="5dp"
                android:text="월, 수, 금"
                android:textStyle="bold"
                android:textSize="12dp" />

            <ToggleButton
                android:id="@+id/tg_Monday"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/tgbtn_drawable"
                android:button="@android:color/transparent"
                android:textColor="@drawable/clickable_words"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_below="@+id/text_repeat"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textOff="월"
                android:textOn="월" />

            <ToggleButton
                android:id="@+id/tg_Tuesday"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/tgbtn_drawable"
                android:button="@android:color/transparent"
                android:textColor="@drawable/clickable_words"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/tg_Monday"
                android:layout_below="@+id/text_repeat"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textOff="화"
                android:textOn="화" />

            <ToggleButton
                android:id="@+id/tg_Wednesday"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/tgbtn_drawable"
                android:button="@android:color/transparent"
                android:textColor="@drawable/clickable_words"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_below="@+id/text_repeat"
                android:layout_toRightOf="@id/tg_Tuesday"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textOff="수"
                android:textOn="수" />

            <ToggleButton
                android:id="@+id/tg_Thursday"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/tgbtn_drawable"
                android:button="@android:color/transparent"
                android:textColor="@drawable/clickable_words"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_below="@+id/text_repeat"
                android:layout_toRightOf="@id/tg_Wednesday"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textOff="목"
                android:textOn="목" />

            <ToggleButton
                android:id="@+id/tg_Friday"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/tgbtn_drawable"
                android:button="@android:color/transparent"
                android:textColor="@drawable/clickable_words"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_below="@+id/text_repeat"
                android:layout_toRightOf="@id/tg_Thursday"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textOff="금"
                android:textOn="금" />

            <ToggleButton
                android:id="@+id/tg_Saturday"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/tgbtn_drawable"
                android:button="@android:color/transparent"
                android:textColor="@drawable/clickable_words"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_below="@+id/text_repeat"
                android:layout_toRightOf="@id/tg_Friday"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textOff="토"
                android:textOn="토" />

            <ToggleButton
                android:id="@+id/tg_Sunday"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/tgbtn_drawable"
                android:button="@android:color/transparent"
                android:textColor="@drawable/clickable_words"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_below="@+id/text_repeat"
                android:layout_toRightOf="@id/tg_Saturday"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textOff="일"
                android:textOn="일" />



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/alarm_explain"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/alarm_repeat"
            app:layout_constraintStart_toStartOf="@+id/alarm_repeat"
            app:layout_constraintTop_toBottomOf="@+id/alarm_repeat">

            <TextView
                android:id="@+id/text_explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="sans-serif"
                android:layout_margin="5dp"
                android:text="알람 설명"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_ex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_below="@+id/text_explain"
                android:textColorHint="@color/mainColor"
                android:textColor="@color/mainColor"
                android:hint="ex) 5시 헬스장"
                android:textStyle="bold"
                android:textSize="15dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#DFE4E6"
                android:layout_alignParentBottom="true"/>




        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/alarm_type"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/alarm_explain"
            app:layout_constraintStart_toStartOf="@+id/alarm_explain"
            app:layout_constraintTop_toBottomOf="@+id/alarm_explain">

            <TextView
                android:id="@+id/text_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="알람 타입"
                android:layout_margin="5dp"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_type"
                android:layout_margin="5dp"
                android:text="진동"
                android:textColor="@color/mainColor"
                android:textStyle="bold"
                android:textSize="12dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#DFE4E6"
                android:layout_alignParentBottom="true"/>



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/number_of_question"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/alarm_type"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/alarm_type"
            app:layout_constraintTop_toBottomOf="@+id/alarm_type">

            <TextView
                android:id="@+id/text_nq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="sans-serif"
                android:text="문제 출제 수"
                android:layout_margin="5dp"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_nq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_nq"
                android:textColor="@color/mainColor"
                android:layout_margin="5dp"
                android:text="2"
                android:textStyle="bold"
                android:textSize="15dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#DFE4E6"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/alarm_btns"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@id/number_of_question"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/gray_bt"
                android:fontFamily="@font/noto_bold"
                android:text="취소"
                android:textColor="#919191"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btn_store"
                app:layout_constraintTop_toTopOf="parent"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_store"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/black_bt"
                android:text="저장"
                android:textColor="#FFFFFF"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/btn_cancel"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>