<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/signUp_top"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/signUp_bottom"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정해진 시간에\n공부하기 위해\n계정을 만들어 보아요!"
            android:fontFamily="@font/noto_bold"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/signUp_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/round_page"
        app:layout_constraintTop_toBottomOf="@id/signUp_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

    <TextView
        android:id="@+id/signup_login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/noto_regular"
        android:text="로그인시 사용할 이메일"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/text_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
        <EditText
            android:id="@+id/signup_id_input"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:hint ="이메일"
            android:background="@drawable/round_box_gray"
            android:inputType="textEmailAddress"
            android:drawablePadding="20dp"
            android:paddingLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup_login_text" />
        <TextView
            android:id="@+id/signup_login_check_text"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:textSize="14sp"
            android:fontFamily="@font/noto_medium"
            android:textColor="@color/red"
            app:layout_constraintTop_toBottomOf="@id/signup_id_input"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/signup_pw_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="사용할 비밀번호"
            android:fontFamily="@font/noto_regular"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            app:layout_constraintTop_toBottomOf="@id/signup_login_check_text"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <EditText
            android:id="@+id/signup_pw_input"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:hint ="비밀번호"
            android:background="@drawable/round_box_gray"
            android:inputType="textPassword"
            android:drawablePadding="20dp"
            android:paddingLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup_pw_text" />
        <TextView
            android:id="@+id/signup_pwc_check_text"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:textSize="14sp"
            android:fontFamily="@font/noto_medium"
            android:textColor="@color/red"
            app:layout_constraintTop_toBottomOf="@id/signup_pw_input"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/signup_pw_check_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="비밀번호 확인"
            android:fontFamily="@font/noto_regular"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            app:layout_constraintTop_toBottomOf="@id/signup_pwc_check_text"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <EditText
            android:id="@+id/signup_pw_check_input"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:hint ="비밀번호 확인"
            android:fontFamily="@font/noto_regular"
            android:background="@drawable/round_box_gray"
            android:inputType="textPassword"
            android:drawablePadding="20dp"
            android:paddingLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup_pw_check_text" />

        <TextView
            android:id="@+id/signup_pw_check_check_text"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:textSize="14sp"
            android:fontFamily="@font/noto_medium"
            android:textColor="@color/red"
            app:layout_constraintTop_toBottomOf="@id/signup_pw_check_input"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_pre_btn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="이전으로"
            android:textColor="#919191"
            android:fontFamily="@font/noto_bold"
            android:textSize="15sp"
            android:background="@drawable/gray_bt"
            app:layout_constraintTop_toBottomOf="@id/signup_pw_check_input"
            app:layout_constraintRight_toLeftOf="@id/signup_next_btn"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_next_btn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginRight="30dp"
            android:text="가입완료"
            android:textColor="@color/white"
            android:fontFamily="@font/noto_bold"
            android:textSize="15sp"
            android:background="@drawable/black_bt"
            app:layout_constraintTop_toTopOf="@id/signup_pre_btn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/signup_pre_btn"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>