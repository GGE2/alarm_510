<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/signUp2_top"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/signUp2_bottom"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기본 프로필 정보를\n입력해주세요 :)"
            android:fontFamily="@font/noto_bold"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/signUp2_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/round_page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signUp2_top">

        <TextView
            android:id="@+id/signup2_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/noto_regular"
            android:text="이름"
            android:textColor="@color/text_gray"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/signup2_name_input"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/round_box_gray"
            android:drawablePadding="20dp"
            android:hint="이름"
            android:inputType="text"
            android:paddingLeft="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup2_name_text" />

        <TextView
            android:id="@+id/signup2_check_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:textSize="14sp"
            android:fontFamily="@font/noto_medium"
            android:textColor="@color/red"
            app:layout_constraintTop_toBottomOf="@id/signup2_name_input"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/signup2_phone_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/noto_regular"
            android:text="휴대폰번호"
            android:textColor="@color/text_gray"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup2_check_name" />

        <EditText
            android:id="@+id/signup2_phone_input"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/round_box_gray"
            android:drawablePadding="20dp"
            android:hint="' - '을 제외하고 입력해주세요."
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup2_phone_text" />
        <TextView
            android:id="@+id/signup2_check_phone_number"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:textSize="14sp"
            android:fontFamily="@font/noto_medium"
            android:textColor="@color/red"
            app:layout_constraintTop_toBottomOf="@id/signup2_phone_input"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/signup2_birth_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/noto_regular"
            android:text="생년월일"
            android:textColor="@color/text_gray"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup2_check_phone_number" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/number_const"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/round_box_gray"
            app:layout_constraintStart_toStartOf="@id/signup2_birth_text"
            app:layout_constraintTop_toBottomOf="@id/signup2_birth_text">

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/signup2_year_date"
                app:ms_background_color="#E5E5E5"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:spinnerMode="dropdown"
                android:overlapAnchor="false"
                android:paddingLeft="20dp"
                app:ms_dropdown_height="250dp"
                app:ms_hint="선택"
                app:ms_hint_color="@color/text_black_gray"
                app:layout_constraintHorizontal_weight="1.5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/signup2_month_date"
                app:layout_constraintTop_toTopOf="parent"/>


            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/signup2_month_date"
                app:ms_background_color="#E5E5E5"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:spinnerMode="dropdown"
                android:overlapAnchor="false"
                app:ms_dropdown_height="250dp"
                app:ms_hint="선택"
                app:ms_padding_left="0dp"
                app:ms_hint_color="@color/text_black_gray"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/signup2_year_date"
                app:layout_constraintRight_toLeftOf="@id/signup2_day_date"
                app:layout_constraintTop_toTopOf="parent" />

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/signup2_day_date"
                app:ms_background_color="#E5E5E5"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:spinnerMode="dropdown"
                android:overlapAnchor="false"
                app:ms_dropdown_height="250dp"
                app:ms_padding_left="0dp"
                app:ms_hint="선택"
                app:ms_hint_color="@color/text_black_gray"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/signup2_month_date"
                app:layout_constraintRight_toRightOf="@id/number_const"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup2_pre_btn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/gray_bt"
            android:fontFamily="@font/noto_bold"
            android:text="이전으로"
            android:textColor="#919191"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/signup2_fin_btn"
            app:layout_constraintTop_toBottomOf="@id/number_const" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup2_fin_btn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/black_bt"
            android:fontFamily="@font/noto_bold"
            android:text="다음으로"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@id/signup2_pre_btn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/signup2_pre_btn" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>