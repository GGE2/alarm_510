<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFB">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_logout"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/tgbtn_drawable"
            android:text="로그아웃" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_setting"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/tgbtn_drawable"
            android:layout_toRightOf="@id/btn_logout"
            android:text="설정" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_question"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/tgbtn_drawable"
            android:layout_toRightOf="@id/btn_setting"
            android:text="문의하기" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_notice"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/tgbtn_drawable"
            android:layout_below="@id/btn_logout"
            android:text="공지" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_information"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/tgbtn_drawable"
            android:layout_toRightOf="@id/btn_notice"
            android:layout_below="@id/btn_setting"
            android:text="서비스 정보" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_test"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/tgbtn_drawable"
            android:layout_toRightOf="@+id/btn_information"
            android:layout_below="@+id/btn_question"
            android:text="테스트용"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>