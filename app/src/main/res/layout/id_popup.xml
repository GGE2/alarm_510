<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_page_all"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/id_text_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원님의 아이디를 찾았습니다."
            android:textColor="@color/text_black"
            android:textSize="18sp"
            android:fontFamily="@font/noto_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/id_pop_shadow"
            android:layout_width="0dp"
            android:layout_height="13dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toBottomOf="@id/id_text_popup"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/get_id"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textColor="@color/text_black"
            android:textSize="16sp"
            android:fontFamily="@font/noto_bold"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/id_pop_shadow"
            app:layout_constraintLeft_toLeftOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/id_popup_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_box_black"
            android:fontFamily="@font/noto_medium"
            android:gravity="center"
            android:onClick="popupClose"
            android:text="복사 및 닫기"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/get_id" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>